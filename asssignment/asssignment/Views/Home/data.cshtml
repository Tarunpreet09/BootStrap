@model students;
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-3">
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModal" id="hello">
        Add
    </button>
</div>

<div class="modal" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
          <h2>Add Subject and Marks</h2>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">
          <label for="#">Subject</label>
                <select name="#" id="subject">
                    <option value="#">Select Subject</option>
                    <option value="ENGLISH">ENGLISH</option>
                    <option value="MATHS">MATHS</option>
                    <option value="SCIENCE">SCIENCE</option>
                    <option value="PUNJABI">PUNJABI</option>
                </select>
      </div>

      <div class="m-2"> 
          <label for="marks">Marks</label>
          <input type="number" id="marks"/>
      </div>

            <div class="m-3">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal" onclick="AddData()">Save</button>
            </div>

    </div>
  </div>
</div>

<div class="modal" id="myModal2">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
              <h2>Edit Data</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

         <div class="modal-body">
          <label for="#">Subject</label>
                <select name="#" id="subject1" disabled>
                    <option value="#">Select Subject</option>
                    <option value="ENGLISH">ENGLISH</option>
                    <option value="MATHS">MATHS</option>
                    <option value="SCIENCE">SCIENCE</option>
                    <option value="PUNJABI">PUNJABI</option>
                </select>
           </div>

            <div class="m-2">
                <label for="marks">Marks</label>
                <input type="number" id="marks1"></input>
            </div>

            <input type="hidden" id="hiddenval"/>
            
            <div class="m-3">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal" onclick="Update()">Add</button>
            </div>
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
        <th>Subjects</th>
        <th>Marks</th>
        <th>Action</th>
        </tr>
    </thead>
    <tbody id="data">
    </tbody>
</table>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<script src="~/js/javascript.js"></script>

