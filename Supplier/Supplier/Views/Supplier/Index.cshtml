@model Suppliers;
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>

<div class="container-fluid">
    <button type="button" class="btn btn-primary" onclick="Save('@Model.Gid')">Save</button>
    <div class="row">

        
       <div class="col-sm-6 mt-4">
        @Html.LabelFor(m =>m.Supplier_Name)
        @Html.TextBoxFor(m =>m.Supplier_Name,new { @class = "form-control" })
        </div>
        
        <div class="col-sm-6 mt-4">
        @Html.LabelFor(m => m.Mobile_No)
        @Html.TextBoxFor(m => m.Mobile_No,new { @class = "form-control" })
        </div>

        </div>

    <div class="row">
        <div class="col-sm-6 mt-4">
           
            @Html.LabelFor(m =>m.ZipCode)
            @Html.TextBoxFor(m =>m.ZipCode,new { @class = "form-control" })
        </div>

        <div class="col-sm-6 mt-4">
            @Html.LabelFor(m => m.State)
            @Html.TextBoxFor(m => m.State,new { @class = "form-control" })
        </div>

    </div>

    <div class="row">

        <div class="col-sm-6 mt-4">
            @Html.LabelFor(m =>m.City)
            @Html.TextBoxFor(m =>m.City,new { @class = "form-control" })
        </div>

        <div class="col-sm-6 mt-4">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email,new { @class = "form-control" })
        </div>

    </div>

    </div>

    <br>

<div class="container">
  
    <button type="button" class="btn btn-primary float-end" data-toggle="modal" data-target="#myModal">
     Add Item
    </button>


    <div class="modal" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">

                
                <div class="modal-header">
                    <h4 class="modal-title">Modal Heading</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

            
                <table class="table">
                    <tr>
                        <th>Item Name</th>
                        <th>Price</th>
                        <th>Action</th>
                    </tr>
                    <tbody class="data123">
                    </tbody>
                </table>

              
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>

            </div>
        </div>
    </div>

</div>

